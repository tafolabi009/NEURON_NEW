# Include documentation and configuration files
include README.md
include LICENSE
include requirements.txt
include config.yaml

# Include all markdown documentation
recursive-include . *.md

# Include training configuration
recursive-include training *.yaml

# Include example scripts
recursive-include examples *.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude .git*
global-exclude .DS_Store
recursive-exclude benchmarks *
recursive-exclude checkpoints *
recursive-exclude data *
recursive-exclude .history *
